@using System.Reflection
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}
<div class="auth-panel">
    <h2>Вход</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger summary-danger"></div>
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                    <span class="text-danger">
                            @ViewBag.Message
                    </span>
                    }
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" maxlength="100"/>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" maxlength="100"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <a asp-area="" asp-controller="Home" asp-action="Register">Нет учётной записи?</a>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Войти" class="btn btn-default" />
                </div>
            </form>
            <div class="version">@Assembly.GetExecutingAssembly().GetName().Version.ToString(3)</div>
        </div>
    </div>
</div>
